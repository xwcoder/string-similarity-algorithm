{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "es2017",
    "rootDir": "src",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.d.ts",
    "**/__tests__/**/*"
  ]
}
